# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here
TELEGRAM_ADMIN_CHAT_ID=your_admin_chat_id_here
TELEGRAM_WEBHOOK_URL=https://yourdomain.com/webhook

# Database Configuration
DATABASE_URL=postgresql://username:password@localhost:5432/arbitrage_bot
DB_HOST=localhost
DB_PORT=5432
DB_USERNAME=arbitrage_user
DB_PASSWORD=secure_password
DB_DATABASE=arbitrage_bot

# Blockchain Configuration
# Ethereum Mainnet
ETH_RPC_URL=https://mainnet.infura.io/v3/your_project_id
ETH_PRIVATE_KEY=your_ethereum_private_key

# BSC Mainnet
BSC_RPC_URL=https://bsc-dataseed1.binance.org/
BSC_PRIVATE_KEY=your_bsc_private_key

# Polygon Mainnet
POLYGON_RPC_URL=https://polygon-rpc.com/
POLYGON_PRIVATE_KEY=your_polygon_private_key

# Testnet RPCs (for development)
ETH_TESTNET_RPC_URL=https://goerli.infura.io/v3/your_project_id
BSC_TESTNET_RPC_URL=https://data-seed-prebsc-1-s1.binance.org:8545/
POLYGON_TESTNET_RPC_URL=https://rpc-mumbai.maticvigil.com/

# Application Configuration
NODE_ENV=development
PORT=3000
JWT_SECRET=your_jwt_secret_here
BCRYPT_ROUNDS=12

# Rate Limiting
RATE_LIMIT_WINDOW_MS=60000
RATE_LIMIT_MAX_REQUESTS=30

# Arbitrage Configuration
MIN_PROFIT_THRESHOLD=0.01
MAX_SLIPPAGE=0.005
GAS_PRICE_MULTIPLIER=1.1
MAX_GAS_LIMIT=500000

# Notification Configuration
EMAIL_ENABLED=false
EMAIL_HOST=smtp.gmail.com
EMAIL_PORT=587
EMAIL_USER=your_email@gmail.com
EMAIL_PASS=your_app_password
EMAIL_FROM=noreply@yourbot.com

SMS_ENABLED=false
SMS_API_KEY=your_sms_api_key
SMS_PHONE_NUMBER=+1234567890

# Monitoring & Health Checks
HEALTH_CHECK_INTERVAL=300000
LOG_LEVEL=info
LOG_MAX_FILES=30
LOG_MAX_SIZE=20m

# Smart Contract Addresses (will be populated after deployment)
ETH_ARBITRAGE_CONTRACT=
BSC_ARBITRAGE_CONTRACT=
POLYGON_ARBITRAGE_CONTRACT= 